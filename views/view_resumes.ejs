                                            <th>Updated At</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i = 0; i< locals.length; i++) { %>
                                            <tr>
                                                <!-- <td><%= locals[i].id %></td> -->
                                                <td><%= i+1 %></td>
                                                <td><img class="text-start" src="/uploads/<%= locals[i].photo %>"></td>
                                                <td><%= locals[i].resume_title %></td>
                                            	<td  width="30px"><%- locals[i].resume_category %></td>
                                                <td><%= locals[i].createdAt %></td>
                                                <td><%= locals[i].updatedAt %></td>
                                                  <td>
                                                   <a class="btn m-1 btn-outline-danger" href="/edit_resumes?id=<%= locals[i].id %>"  type="" ><i class="bi bi-pencil-square"></i></a>
                                                  <a class="btn m-1 btn-outline-danger" href="/delete_resumes/<%= locals[i].id %>"  type=""><i class="bi bi-trash3-fill"></i></a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    </tfoot>

  <style>
    section h1{
      font-weight: 800;
      font-size: 2rem;
      margin-top: 2.5rem;
    }
    /* Float four columns side by side */
    .column {
      float: left;
      width: 25%;
      padding: 0 10px;
    }

    /* Remove extra left and right margins, due to padding */
    .row {
      margin: 0 -5px;
    }

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    /* Responsive columns */
    @media screen and (max-width: 600px) {
      .column {
        width: 100%;
        display: block;
        margin-bottom: 20px;
      }
    }

    /* Style the counter cards */
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      padding: 16px;
      /* text-align: center; */
      /* background-color: #f1f1f1; */
    }
    .card {
      border-radius: 8px;
      height: auto;
      width: 100%
    }

    .card.border {
      border: 1px solid #e8ebf2
    }

    .image,
    .image-container {
      width: 100%
    }

    .image {
      object-fit: cover
    }

    .image.image_full_width_sm {
      border-radius: 7px 7px 0 0;
      height: 160px
    }

    .image.image_full_width_lg {
      border-radius: 7px 7px 0 0;
      height: 280px
    }

    .image.image_md {
      height: 112px;
      margin-top: 32px;
      width: 112px
    }

    .image.image_sm {
      height: 64px;
      margin-top: 24px;
      width: 64px
    }

    .image.image_xs {
      margin-top: 34px
    }

    .image.image_left_text_right,
    .image.image_xs {
      height: 24px;
      width: 24px
    }

    .text-container>:not(:last-child) {
      margin-bottom: 16px
    }

    p {
      font-size: 20px !important;
    }
  </style>
</head>

<body class="text-black">

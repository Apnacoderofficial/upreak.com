<!-- Include Toastr JS and CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
  $(document).ready(function() {
    $('.resume-apply-form').on('submit', function(event) {
      event.preventDefault(); // Prevent the default form submission

      var form = $(this);
      var resumeId = form.data('resume-id');
      var formData = form.serialize();  // Serialize form data

      $.ajax({
        url: '/apply_resume',
        method: 'POST',
        data: formData + '&resume_id=' + encodeURIComponent(resumeId),
        success: function(response) {
          if (response.success) {
            toastr.success(response.message); // Show success message

            // Check and open the resume link if it exists
            if (response.resumeLink && typeof response.resumeLink === 'string' && response.resumeLink.trim()) {
              console.log('Resume Link:', response.resumeLink); // Debugging line
              window.open(response.resumeLink, '_blank'); // Open resume link in a new tab
            }

            // Close the modal and redirect
            var modalId = '#imageModal-' + resumeId;
            $(modalId).modal('hide'); // Hide the modal

            // Ensure that modal is closed before redirecting
            setTimeout(function() {
              location.reload(); // Redirect after modal has closed
            }, 500); // Adjust the timeout duration if needed
          } else {
            toastr.error(response.message); // Show error message if operation fails
          }
        },
        error: function() {
          toastr.error('There was an error processing your application. Please try again later.'); // Show error message on AJAX error
        }
      });
    });
  });
</script>





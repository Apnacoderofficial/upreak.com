  <!-- END nav -->

  <div class="container p-1 mb-2" style="margin-top: 130px;">
    <h1 class="custom-heading animate mb-1">Get Creative Resume and Cover letter that inspire</h1>
    <!-- <p class="text-center custom-para animate">We are a recruitment company that connects talented individuals with top companies and organizations, guiding them towards their dream jobs and helping them achieve their career aspirations.</p> -->
    <div class="d-flex justify-content-center align-items-center text-center">
    </div>
  </div>
 

  <section class="container mt-3">
    <div class="row">
        <% resumes.forEach(resume => { %>
            <% if(resume.resume_category !== null) { %>
            <!-- Display the resume image or a placeholder if no resume is available -->
            <div class="col-md-3 mb-4" data-bs-toggle="modal" data-bs-target="#imageModal-<%= resume.id %>">
                <div class="card" style="width: 100%; border: none;">
                    <div class="card-body">
                        <% if (resume.resume_category == "information_technology") { %>
                            <img src="/uploads/<%= resume.photo %>" style="width: 100%; height: 100%;" alt="<%= resume.resume_category %>-<%= resume.id %>">
                            <h5 class="card-title mt-2"><%= resume.resume_title %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= resume.resume_category %></h6>
                        <% } else { %>
                            <img src="https://img.freepik.com/free-vector/page-found-concept-illustration_114360-1869.jpg?t=st=1719822666~exp=1719823266~hmac=c7a525bc4742282f3ff4515dfb81cda8551b033ad60bce8de0594061f63bbbe0" class="card-img-top" alt="No Resume Found">
                            <div class="card-body text-center">
                                <p class="card-text">No Resume Available</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Modal for each resume -->
            <div class="modal fade" id="imageModal-<%= resume.id %>" tabindex="-1" aria-labelledby="imageModalLabel-<%= resume.id %>" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="imageModalLabel-<%= resume.id %>">Apply for Resume ID <%= resume.id %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form class="resume-apply-form" data-resume-id="<%= resume.id %>">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="name-<%= resume.id %>" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name-<%= resume.id %>" name="name" placeholder="Enter Your Name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email-<%= resume.id %>" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email-<%= resume.id %>" name="email" placeholder="Enter Your Email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="phone_number-<%= resume.id %>" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone_number-<%= resume.id %>" name="phone_number" placeholder="Enter Your Number" maxlength="10" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <% } else { %>
                <img src="https://img.freepik.com/free-vector/page-found-concept-illustration_114360-1869.jpg?t=st=1719822666~exp=1719823266~hmac=c7a525bc4742282f3ff4515dfb81cda8551b033ad60bce8de0594061f63bbbe0" class="card-img-top" alt="No Resume Found">
                <div class="card-body text-center">
                    <p class="card-text">No Resume Available</p>
                </div>
            <% } %>
        <% }); %>
    </div>
    </section>








  




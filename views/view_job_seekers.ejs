            <body>
            <div class="container-scroller">
              <!-- partial:partials/_navbar.html -->
              <%- include('includes/navbar.ejs') %>
              <!-- partial -->
              <div class="container-fluid page-body-wrapper">
                <!-- partial -->
                <!-- partial:partials/_sidebar.html -->
                <%- include('includes/sidebar.ejs') %>
                <!-- partial -->
                <div class="main-panel"> <div class="content-wrapper">
                  <div class="row">
                    <div class="col-md-12 grid-margin">
                      <div class="row">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                          <h3 class="font-weight-bold">Candidates Details</h3>
                         
                        </div>
                       
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 ">
                        <div class="card shadow mb-4">
                          <div class="card-header">
                            <div class="row ">
                              <h5 class="col pt-2">View Details</h5>
                              <a href="/export/responses" class="btn btn-primary col-md-offset-6 mx-1" style="float: right;">Export</a>
                              <!-- <a href="/add_job_seekers" class="btn btn-primary col-md-offset-6 mx-1" style="float: right;" >Add</a> -->
                              <!-- <a href="/export/responses" class="btn btn-primary col-md-offset-6" style="float: right;" >Export</a> -->
                          </div>
                          </div>
                        <div class="card-body">
                                <table  class=" table table-responsive  table-striped display expandable-table" width="100%" cellspacing="0">
                                    <thead class="table-light">
                                        <tr class=" text-center">
                        
                                            <!-- <th>Id</th> -->
                                            <th>SNo.</th>
                                            <th>Application ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>DOB</th>
                                            <th>2 Step Verification</th>
                                            <th>Phone Verify</th>
                                            <th>Email Verify</th>
                                            <th>Skills</th>
                                            <th>Highest Qualification</th>
                                            <th>Experience</th>
                                            <th>Location</th>
                                            <th>Preferred Job Location</th>
                                            <th>Preferred CTC</th>
                                            <th>Notice Period</th>
                                            <th>Resume</th>                                         
                                            <% if(srole == 'Master' || srole == "Admin") { %>
                                              <th>Actions</th>
                                            <%}%>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% for (var i = 0;i < locals.length ; i++) {%>
                                            <tr>
                                                <!-- <td><%= locals[i].id %></td> -->
                                                <td><%= i+1 %></td>
                                                <td><%= locals[i].application_id %></td>
                                                <td><%= locals[i].name %></td>
                                                <td><%= locals[i].emailid %></td>
                                                <td><%= locals[i].phonenumber %></td>                                                
                                                <td><%= locals[i].dob %></td>
                                                <td>
                                                  <div class="custom-control custom-switch">
                                                      <input type="checkbox" class="custom-control-input twoStepToggle" id="twoStepToggle<%= i %>" data-id="<%= locals[i].emailid %>" <%= locals[i].two_step ? 'checked' : '' %> />
                                                      <label class="custom-control-label" for="twoStepToggle<%= i %>"></label>
                                                  </div>
                                              </td>   
                                            	<td><%= locals[i].phone_verify %></td>
                                            	<td><%= locals[i].email_verify %></td>
                                              <td>
                                                <% if (locals[i].skill1) { %><%= locals[i].skill1 %><% } %>
                                                <% if (locals[i].skill2) { %>,<%= locals[i].skill2 %><% } %>
                                                <% if (locals[i].skill3) { %>,<%= locals[i].skill3 %><% } %>
                                                <% if (locals[i].skill4) { %>,<%= locals[i].skill4 %><% } %>
                                                <% if (locals[i].skill5) { %>,<%= locals[i].skill5 %><% } %>
                                              </td>
                                              <td>
                                                <% if (locals[i].pgqualification) { %><%= locals[i].pgqualification %><% }
                                                else if (locals[i].ugqualification) { %><%= locals[i].ugqualification %><% }
                                                else if (locals[i].qualification_diploma) { %><%= locals[i].qualification_diploma %><% }
                                                else if (locals[i].qualification_12) { %><%= locals[i].qualification_12 %><% }
                                                else if (locals[i].qualification_10) { %><%= locals[i].qualification_10 %><% } %>
                                              </td>
                                              <td><%= locals[i].experience %></td>
                                              <td><%= locals[i].city %></td>
                                              <td><%= locals[i].job_location %></td>
                                              <td><%= locals[i].preferred_ctc %></td>
                                              <td><%= locals[i].job_jdate %></td>
                                                <td>
                                                  <% if( locals[i].resume_file && locals[i].resume_file.publicUrls ) {%>
                                                    <a class="btn m-1 btn-outline-info" href="<%= locals[i].resume_file.publicUrls %>">Download</a>
                                                    <!-- <a class="btn m-1 btn-outline-info" href="/download_resume?id=<%= locals[i].id %>"  type="">Download</a> -->
                                            		<% } else {%>
                                                  <p>No Resume Found</p>
                                                <% }%>
                                            </td>
                                                <% if(srole == 'Master' || srole == "Admin") { %>
                                                  <td>
                                                    <a class="btn m-1 btn-outline-danger" href="/view_job_detail?id=<%= locals[i].id %>"  type="" ><i class="bi bi-eye"></i></a>
                                                    <a class="btn m-1 btn-outline-danger" href="/edit_job_seeker?id=<%= locals[i].id %>"  type="" ><i class="bi bi-pencil-square"></i></a>
                                                   <% if(srole !== "Admin") { %>
                                                  <a class="btn m-1 btn-outline-danger" href="/delete_job_seeker/<%= locals[i].id %>"  type=""><i class="bi bi-trash3-fill"></i></a>
                                            	 <% } %>   
                                            </td>
                                                <% } %>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    </tfoot>
                                </table>
                            
                        </div>
                  
                
                        </div>
                      </div>
                    </div>
                </div>
                            <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
$(document).ready(function() {
    $('.twoStepToggle').change(function() {
        var isChecked = $(this).is(':checked') ? 1 : 0;
        var id = $(this).data('id');
        console.log(isChecked);
        $.ajax({
            url: '/updatetwostep',
            method: 'POST',
            data: {
                id: id,
                two_step: isChecked
            },
            success: function(response) {
                var message = isChecked ? '2 Step Verification enabled' : '2 Step Verification disabled';
                toastr.success(message);
                console.log('Update successful:', response);
            },
            error: function(error) {
                toastr.error('Error updating');
                console.error('Error updating:', error);
            }
        });
    });
});
</script>
         
      
                  <!-- content-wrapper ends -->
                  <!-- partial:partials/_footer.html -->
                  <%- include('includes/footer.ejs') %>
                  <!-- partial -->
                </div>
                <!-- main-panel ends -->
              </div>
              <!-- page-body-wrapper ends -->

 <!-- jQuery for AJAX handling -->
 <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
 <script>
     $(document).ready(function() {
         $('#api-form').on('submit', function(event) {
             event.preventDefault();

             // Show loading spinner
             $('.spinner-border').show();

             const userMessage = $('#userMessage').val();
             
             $.ajax({
                 url: '/gptchat', // Adjust the endpoint based on your Node.js setup
                 type: 'POST',
                 contentType: 'application/json',
                 data: JSON.stringify({ message: userMessage }),
                 success: function(response) {
                     $('#api-response').text(response.message);
                 },
                 error: function(xhr) {
                     $('#api-response').text('Error: ' + xhr.responseJSON.message || 'Unexpected error occurred.');
                 },
                 complete: function() {
                     // Hide loading spinner
                     $('.spinner-border').hide();
                 }
             });
         });
     });
 </script>
</body>

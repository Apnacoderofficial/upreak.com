                <div class="main-panel"> <div class="content-wrapper">
                  <div class="row">
                    <div class="col-md-12 grid-margin">
                      <div class="row">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                          <h3 class="font-weight-bold">Jobs</h3>
                         
                        </div>
                       
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 ">
                        <div class="card shadow mb-4">
                          <div class="card-header">
                            <div class="row ">
                              <h5 class="col pt-2">Job Applications</h5>
                              <% if(locals && locals.length > 0) {%>
                              <a href="/export/job_applications" class="btn btn-primary col-md-offset-6 mx-1" style="float: right;">Export</a>
                              <% } %>
                          </div>
                          </div>
                        <div class="card-body">
                                <table  class="table  table-striped display rable-responsive  expandable-table"  width="100%" cellspacing="0">
                                    <thead class="table-light">
                                        <tr class=" text-center">
                                            <th>SNo.</th>
                                            <th>Job Heading</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Created At</th>
                                            <th>Status</th>
                                            <th>Resume</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% for (var i = 0;i < locals.length ; i++) {%>
                                            <tr>
                                                <td><%= i+1 %></td>
                                                <td><%= getJobHeading(locals[i].job_id, jobs) %></td>
                                                <td><%= locals[i].name %></td>
                                                <td><%= locals[i].email %></td>
                                                <td><%= locals[i].phone_number %></td>
                                                <td><%= locals[i].createdAt %></td>                                                
                                                <td>Applied</td>
                                                <td>
                                                  <% if(locals[i] && locals[i].resume !='') {%>
                                                    <a class="btn m-1 btn-outline-info" target="_blank" href="/uploads/<%= locals[i].resume %>">Resume</a>
                                            		  <% }%>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                    </tfoot>
                                </table>
                            
                        </div>
                  
                        <% function getJobHeading(jobId, jobs) {
                            for (let j = 0; j < jobs.length; j++) {
                              if (jobs[j].job_id === jobId) {
                                return jobs[j].heading; // or jobs[j].title or any field that contains the heading
                              }
                            }
                            return "Job Deleted"; // Fallback if jobId is not found
                          }
                       %>
                        </div>
                      </div>
                    </div>
                </div>
         
      
                  <!-- content-wrapper ends -->
                  <!-- partial:partials/_footer.html -->
                  <%- include('includes/footer.ejs') %>
                  <!-- partial -->
                </div>
                <!-- main-panel ends -->
              </div>
              <!-- page-body-wrapper ends -->
            </div>

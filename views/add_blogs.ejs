          <div class="row">
            <div class="col-md-12 ">
              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Add Blogs</h5>
                </div> 
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" action="<%- typeof locals == 'undefined' ? '/save_blogs' : '/update_blogs' %>" enctype="multipart/form-data">
                    <div class="row">
                      <input type="number" name="id" hidden value="<%= typeof locals == 'undefined' ? '': locals.id %>">
                      <div class="mb-3 col-md-12">
                        <div class="form-group">
                           <label> Enter Url Title</label>                                 
                           <input type="text" id="url_title" name="url_title" class="form-control" autocomplete="off" placeholder="Enter Blog Url Title" value="<%- typeof locals != 'undefined' ? locals.url_title : '' %>" >
                        </div>
                     </div>
                     <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Title</label>                                 
                         <input type="text" id="title" name="title" class="form-control" autocomplete="off" placeholder="Enter Blog Title" value="<%- typeof locals != 'undefined' ? locals.heading : '' %>" >
                      </div>
                   </div>
                     <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Description</label>   
                      <div class=" p-2">
                         <textarea id="editor" name="description" rows="10" class="form-control" autocomplete="off" placeholder="Enter Your Description"><%- typeof locals != 'undefined' ? locals.summary : '' %></textarea>
                      </div>
                     </div>
                   </div>
                 <div class="mb-3 col-md-12">
                  <div class="form-group">
                     <label>Meta Description</label>                                 
                     <textarea name="metadescription" id="metadescription" rows="5" class="form-control" autocomplete="off" placeholder="Enter Your Meta Description"><%- typeof locals != 'undefined' ? locals.metadescription : '' %></textarea>
                  </div>
                </div>
                <script>
                  $(document).ready(function () {
                      $('#metadescription').on('input', function () {
                          var maxLength = 160;
                          var text = $(this).val();
              
                          if (text.length > maxLength) {
                              $(this).val(text.substring(0, maxLength));
                          }
                      });
                  });
              </script>
               <div class="mb-3 col-md-12">
                <div class="form-group">
                   <label>Meta Keywords</label>  
                   <textarea name="metakeywords" id="metakeywords" rows="5" class="form-control" autocomplete="off" placeholder="Enter Your Meta Keywords"><%- typeof locals != 'undefined' ? locals.metakeywords : '' %></textarea>     
                </div>
             </div>

                   <div class="mb-3 col-md-12">
                        <div class="form-group">
                           <label>Upload Blog Image</label>                                 
                           <input type="file" id="photo" name="photo" class="form-control" >
                           <img src="uploads/<%- typeof locals != 'undefined' ? locals.photo : '' %>"width="200px" height="200px"> 
                           <input type="hidden"  value="<%- typeof locals != 'undefined' ? locals.photo : '' %>" name="photo_file_name" >    
                        </div>
                     </div>
    
                    <div class="col-md-12 mt-2">
                      <button type="submit" class="btn btn-primary me-2">Save</button>
                      <button type="reset" class="btn btn-outline-secondary ">Reset</button>
                    </div>
        
                  </form>

<%- include('includes/head.ejs') %>
  <script src="https://cdn.tiny.cloud/1/jzf5bh8mew2nqjyawqxme5g5oaj3c53t15r14hyigzjvwohs/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('includes/navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('includes/sidebar.ejs') %>
        <!-- partial -->
        <div class="main-panel"> 
          <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin">
              <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                  <h3 class="font-weight-bold">Corporate Corner</h3>
                 
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Add Corporate Corner</h5>
                </div> 
         
                <div class="card-body">
                    <form id="formCorporateCorner" method="POST" action="<%- typeof locals == 'undefined' ? '/save_corporatecorner' : '/update_corporatecorner' %>" enctype="multipart/form-data">
                        <div class="row">
                            <input type="number" name="id" hidden value="<%= typeof locals == 'undefined' ? '' : locals.partner_id %>">
                    
                            <div class="mb-3 col-md-12">
                                <div class="form-group">
                                    <label>Company Name</label>
                                    <input type="text" name="company_name" class="form-control" autocomplete="off" placeholder="Enter Company Name" value="<%- typeof locals != 'undefined' ? locals.company_name : '' %>" required>
                                </div>
                            </div>
                            <div class="mb-3 col-md-12">
                              <div class="form-group">
                                  <label>Page Heading</label>
                                  <input type="text" name="heading" class="form-control" autocomplete="off" placeholder="Enter heading" value="<%- typeof locals != 'undefined' ? locals.heading : '' %>" required>
                              </div>
                          </div>
                          <div class="mb-3 col-md-12">
                            <div class="form-group">
                                <label>Company subheading</label>
                                <input type="text" name="subheading" class="form-control" autocomplete="off" placeholder="Enter subheading" value="<%- typeof locals != 'undefined' ? locals.subheading : '' %>">
                            </div>
                        </div>
                            <div class="mb-3 col-md-12">
                              <div class="form-group">
                                  <label>Company Category</label>
                                  <input type="text" name="company_category" class="form-control" autocomplete="off" placeholder="Enter Company category" value="<%- typeof locals != 'undefined' ? locals.company_category : '' %>" required>
                              </div>
                          </div>

                            <div class="mb-3 col-md-12">
                                <div class="form-group">
                                    <label>Company Address</label>
                                    <input type="text" name="company_address" class="form-control" autocomplete="off" placeholder="Enter Company Address" value="<%- typeof locals != 'undefined' ? locals.company_address : '' %>" required>
                                </div>
                            </div>
                            <!-- Service Description -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Company Description</label>
      <textarea name="company_description" class="form-control" rows="4" placeholder="Enter company Description"><%- typeof locals != 'undefined' ? locals.company_description : '' %></textarea>
  </div>
</div>

                    
                            <div class="mb-3 col-md-12">
                                <div class="form-group">
                                    <label>Contact Person</label>
                                    <input type="text" name="contact_person" class="form-control" autocomplete="off" placeholder="Enter Contact Person" value="<%- typeof locals != 'undefined' ? locals.contact_person : '' %>" required>
                                </div>
                            </div>
                    
                            <div class="mb-3 col-md-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" name="email" class="form-control" autocomplete="off" placeholder="Enter Email" value="<%- typeof locals != 'undefined' ? locals.email : '' %>" required>
                                </div>
                            </div>
                    
                            <div class="mb-3 col-md-12">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="tel" name="phone" class="form-control" autocomplete="off" placeholder="Enter Phone" value="<%- typeof locals != 'undefined' ? locals.phone : '' %>" required>
                                </div>
                            </div>
                            <div class="mb-3 col-md-12">
                              <div class="form-group">
                                <label for="service_status">Company Status</label>
                                <select name="company_status" id="company_status" class="form-control">
                                  <option disabled selected>-- Choose Status -- </option>
                                  <option value="Active" <% if (typeof locals !== 'undefined' && locals.company_status === 'Active') { %>selected<% } %>>Active</option>
                                  <option value="Disabled" <% if (typeof locals !== 'undefined' && locals.company_status === 'Disabled') { %>selected<% } %>>Disabled</option>
                                </select>
                              </div>
                            </div>
                            
                            <!-- Photo Upload (if applicable) -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Partner Photo</label>                         
                           <input type="file" id="photo" name="photo" class="form-control">
                           <img src="/uploads/<%- typeof locals != 'undefined' ? locals.photo : '' %>"width="200px" height="200px"> 
                           <input type="hidden"  value="<%- typeof locals != 'undefined' ? locals.photo : '' %>" name="photo_file_name" >    
  </div>
</div>
                            <div class="col-md-12 mt-2">
                                <button type="submit" class="btn btn-primary me-2">Save</button>
                                <button type="reset" class="btn btn-outline-secondary">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /Account -->
              </div>
            </div>
          </div>
        </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('includes/footer.ejs') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
     
</body>
  
                            
                           
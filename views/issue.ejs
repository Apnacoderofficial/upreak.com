                <div class="main-panel"> <div class="content-wrapper">
                  <div class="row">
                    <div class="col-md-12 grid-margin">
                      <div class="row">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                          <h3 class="font-weight-bold">Issues</h3>
                         
                        </div>
                      </div>
                    </div>
                </div>
                <!-- <a class="btn btn-success m-2"  href="/add_products">Add Products <i class="fa fa-solid fa-plus"></i></a> -->
                  <div class="row">
                    <div class="col-md-12 ">
                      
                        <div class="card shadow mb-4">
                          <div class="card-header">
                            <div class="row ">
                              <h5 class="col pt-2">View Issues</h5>
<!--                               <a href="/export_testimonials" class="btn btn-primary col-md-offset-6" style="float: right;" >Export</a> -->
                          </div>
                         
                          </div> 
                          <% if(session.role == "User"){ %> 
                          <form action="/save_ticket" class="p-3 contact-form" method="POST">
                            <h1 style="font-size:35px">Raise Ticket</h1>
                                          <div class="form-group">
                                            <label for="name">Name</label>
                                            <input type="text" class="form-control" name="name" id="nameInput" placeholder="Your Name" required>
                                          </div>
                                          <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" class="form-control" name="email"id="emailInput" placeholder="Your Email" value="<%= session.userid%>"required>
                                          </div>
                                          <div class="form-group">
                                            <label for="subject">Issue Subject</label>
                                            <input type="text" class="form-control" name="subject"id="subjectInput" placeholder="Subject" required>
                                          </div>
                                          <div class="form-group">
                                            <label for="message">Description</label>
                                            <textarea id="messageInput" cols="30" name="message" rows="7" class="form-control" placeholder="Message" required></textarea>
                                          </div>
                                          <input type="text" class="form-control" name="category" id="subjectInput" value="ticket" hidden>
                                          <div class="form-group d-block w-100">
                                            <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                                          </div>
                                      </form>
                          <% } %>
                            <div class="card-body">
                              <div class="table-responsives">
                                <table    class=" table   table-striped display expandable-table"  width="100%" cellspacing="0">
                                  <thead class="table-light">
                                      <tr class=" text-center">
                              
                                          <!-- <th>Id</th> -->
                                          <th>SNo.</th>
                                          <th>Name</th>            
                                          <th>Email</th>
                                          <th>Subject</th>          
                                          <th>created At</th>
                                          <th>Description</th>                                            
                                      </tr>
                                  </thead>
                                  <tbody>
                                    <% var j=1; %>
                                      <% for(var i = 0; i< locals.length; i++) { %>
                                        <% if(locals[i].category == 'ticket' &&   session.role == 'User' && locals[i].email == session.userid) {%>                                         
                                            <tr>
                                              <td><%= j %></td>
                                              <td><%= locals[i].name %></td>
                                              <td><%= locals[i].email %></td>
                                              <td><%= locals[i].subject %></td>
                                              <td><%= locals[i].createdAt %></td>  
                                              <td style="white-space: pre-line;"><%= locals[i].message %></td>
                                         
                                          </tr> 
                                        <%  j=j+1;} else if(locals[i].category == 'ticket' &&   (session.role == 'Master' || session.role == 'HR')) { %>
                                          <tr>
                                            <td><%= j %></td>
                                            <td><%= locals[i].name %></td>
                                            <td><%= locals[i].email %></td>
                                            <td><%= locals[i].subject %></td>
                                            <td><%= locals[i].createdAt %></td>  
                                            <td style="white-space: pre-line;"><%= locals[i].message %></td>
                                          
                                        </tr> 
                                      <%  j=j+1; } %>
                                      <%  } %>
                                  </tbody>
                                  </tfoot>
                              </table>
                              </div>
                                  
                          </div>
                  
                
                        </div>
                      </div>
                    </div>
                </div>
                 
      
                  <!-- content-wrapper ends -->

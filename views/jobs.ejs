    <div class="job-listing-area pt-120 pb-120">
      <div class="container">
          <div class="row">
              <!-- Left content -->
              <div class="col-xl-3 col-lg-3 col-md-4 ">
                  <div class="row">
                      <div class="col-12">
                              <div class="small-section-tittle2 mb-45">
                              <div class="ion"> <svg 
                                  xmlns="http://www.w3.org/2000/svg"
                                  xmlns:xlink="http://www.w3.org/1999/xlink"
                                  width="20px" height="12px">
                              <path fill-rule="evenodd"  fill="rgb(27, 207, 107)"
                                  d="M7.778,12.000 L12.222,12.000 L12.222,10.000 L7.778,10.000 L7.778,12.000 ZM-0.000,-0.000 L-0.000,2.000 L20.000,2.000 L20.000,-0.000 L-0.000,-0.000 ZM3.333,7.000 L16.667,7.000 L16.667,5.000 L3.333,5.000 L3.333,7.000 Z"/>
                              </svg>
                            </div>
                            <h4>Filter Jobs</h4>
                          </div>
                      </div>
                  </div>    
                    <form id="filterForm" action="/jobs" method="POST">
                        <!-- Job Category Listing start -->
                        <div class="job-category-listing mb-10 p-3">
                            <!-- single one -->
                            <div class="single-listing">
                                <!-- select-Categories start -->
                                <div class="select-Categories pt-1 pb-10">
                                    <div class="small-section-tittle2">
                                        <h4>Job Type</h4>
                                    </div>
                                    <select id="job_type" name="job_type" class="form-control">
                                    <option value="">Select Job Type</option>
                                    <option value="Full Time"<%= typeof bData != 'undefined' ? (!!bData.job_type) ?  bData.job_type === 'Full Time' ? 'selected' : '' :  '' : '' %>>Full Time</option>
                                    <option value="Part Time"<%= typeof bData != 'undefined' ? (!!bData.job_type) ?  bData.job_type === 'Part Time' ? 'selected' : '' :  '' : '' %>>Part Time</option>
                                    <option value="Remote"<%= typeof bData != 'undefined' ? (!!bData.job_type) ?  bData.job_type === 'Remote' ? 'selected' : '' :  '' : '' %>>Remote</option>
                                    <option value="Freelance"<%= typeof bData != 'undefined' ? (!!bData.job_type) ?  bData.job_type === 'Freelance' ? 'selected' : '' :  '' : '' %>>Freelance</option>
                                </select>
                                </div>
                                <!-- select-Categories End -->
                            </div>
                            <!-- single two -->
                            <div class="single-listing ">
                                <div class="small-section-tittle2">
                                    <h4>Job Location</h4>
                                </div>
                                <!-- Select job items start -->
                                <div class="select-job-items2 ">
                                <input type="text" id="location" name="location" class="form-control" autocomplete="off" placeholder="Enter Location" value="<%- typeof bData != 'undefined' ? bData.location : '' %>" >
                                </div> 
                                <!--  Select job items End-->
                                <!-- select-Categories start -->
                               <div class="select-Categories pt-10 pb-10">
                                    <div class="small-section-tittle2">
                                        <h4>Experience</h4>
                                    </div>
                                    <select id="experience" name="experience" class="form-control">
                                    <option value="">Select Experience</option>
                                    <option value="0"<%= typeof bData != 'undefined' ? (!!bData.experience) ?  bData.experience === '0' ? 'selected' : '' :  '' : '' %>>Fresher</option>
                                    <option value="1"<%= typeof bData != 'undefined' ? (!!bData.experience) ?  bData.experience === '1' ? 'selected' : '' :  '' : '' %>>Experience</option>
                                </select>
                                </div>
                                <!-- select-Categories End -->
                            </div>
                            <!-- single three -->
                            <div class="single-listing">
                                <!-- select-Categories start -->
                                <div class="select-Categories pb-10">
                                    <div class="small-section-tittle2">
                                        <h4>Posted Within</h4>
                                    </div>
                                    <select id="createdAt" name="createdAt" class="form-control">
                                    <option value="">Select Posted Date</option>
                                    <option value="0"<%= typeof bData != 'undefined' ? (!!bData.createdAt) ?  bData.createdAt === '0' ? 'selected' : '' :  '' : '' %>>Today</option>
                                    <option value="1"<%= typeof bData != 'undefined' ? (!!bData.createdAt) ?  bData.createdAt === '1' ? 'selected' : '' :  '' : '' %>>This Month</option>
                                    <option value="2"<%= typeof bData != 'undefined' ? (!!bData.createdAt) ?  bData.createdAt === '2' ? 'selected' : '' :  '' : '' %>>Older</option>
                                </select>
                                </div>
                                <!-- select-Categories End -->
                            </div>
                            <div class="col-md-12 mt-4 mx-5 justify-content-center mx-auto">
                                <button type="submit" class="btn btn-primary me-2">Apply</button>
                                <a href="/jobs" class="btn btn-outline-secondary ">Reset</a>
                              </div>
                        </div>
                        
                    </form>
                    
                    
                  <!-- Job Category Listing End -->
              </div>
              <!-- Right content -->
              
              <div class="col-xl-9 col-lg-9 col-md-8">
                  <!-- Featured_job_start -->
                  <section class="featured-job-area">
                      <div class="container">
                            <!-- Count of Job list Start -->
                            <div class="row">
                                <div class="col-lg-12 ">
                                    <div class="count-job mb-35">
                                        <span><%= locals.length %> Jobs Found</span>
                                        <!-- Select job items start -->
                                        <div class="select-job-items">
                                            <!-- <span>Sort by</span>
                                            <select name="select" class="form-control">
                                                <option value="">None</option>
                                                <option value="">job list</option>
                                                <option value="">job list</option>
                                                <option value="">job list</option>
                                            </select> -->
                                        </div>
                                        <!--  Select job items End-->
                                    </div>
                                </div>
                            </div>
                            <!-- Count of Job list End -->
                            <!-- single-job-content -->
                            <div class="job-list-container">
                                <% for (let i = 0; i < locals.length; i++) { %>
                                    <div class="single-job-items mb-20 border-bottom border-5">
                                        <div class="job-items">
                                            <div class="company-img">
                                                <img  src="../uploads/<%= locals[i].photo %>" alt="Logo" width="80" height="80">
                                            </div>
                                            <div class="job-tittle job-tittle2">

                                                    <h4 class="truncated-heading"><%= locals[i].heading %></h4>
                                            
                                                <ul>
                                                    <li><%= locals[i].job_type %></li> &nbsp;
                                                    <%  const locations = locals[i].location.split(',').map(location => location.trim()); %>
                                                    <li>
                                                    <i class="fas fa-map-marker-alt"></i>
                                                    <% locations.forEach((location, index) => { %>
                                                    <%= location %><%= (index % 2 === 0 && index < locations.length - 1) ? ', ' : '' %>
                                                        <% if ((index + 1) % 2 === 0 && index < locations.length) { %>
                                                            <br>
                                                        <% } %>
                                                    <% }) %>
                                                    </li>
                                                    <li> <%= locals[i].amount %></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="items-link items-link2 f-right">
                                            <% if (locals[i].status == 1)  { %>
                                                <a class="btn" href="/job_details?jobId=<%= locals[i].job_id %>">Apply</a>
                                            <% } else { %>
                                                <strong>Closed</strong>
                                            <% } %>
                                            <span><%= locals[i].createdAt %></span>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                      </div>
                  </section>
                  <!-- Featured_job_end -->
              </div>
              
          </div>
      </div>
  </div>
    


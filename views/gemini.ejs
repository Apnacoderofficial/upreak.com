<%- include('includes/head.ejs') %>
    <style>
            .response-box {
            margin-top: 20px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
            min-height: 100px;
        }
        .spinner-border {
            display: none;
            margin-left: 10px;
        }
    </style>

<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <%- include('includes/navbar.ejs') %>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <%- include('includes/sidebar.ejs') %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">

                    <div class="row">
                        <div class="col-md-12 p-3">
                            <div class="container">
                                <h1 class="text-center">Gemini Chat</h1>
                                <div class="row justify-content-center">
                                    <div class="col-md-8">
                                        <form  method="post" action="/gemini">
                                            <div class="form-group">
                                                <label for="userMessage">Your Message:</label>
                                                <input type="text" name="prompt" class="form-control" id="userMessage" placeholder="Enter your message here" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Send</button>
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                        </form>
                                        <div class="response-box mt-4">
                                            <h4>Response:</h4>
                                            <% if (response) { %>
                                                <div class="alert alert-info">
                                                    <pre><%= response %></pre>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <%- include('includes/footer.ejs') %>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
 <!-- Bootstrap JS and dependencies -->
 <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

 <!-- jQuery for AJAX handling -->
 <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</body>

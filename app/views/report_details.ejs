                <script>
                  function checkMobile(event) {
                      if (isMobileDevice()) {
                          // Prevent the default action (disabling href)
                          event.preventDefault();
                          
                          // Trigger your modal or alert here
                          alert("You can download report on desktop/ by opening the tab in desktop mode.");
                      }
                  }
              
                  function isMobileDevice() {
                      // Adjust the screen size conditions as needed
                      return window.innerWidth <= 768; // Example: Disables on screens smaller than or equal to 768px
                  }
              </script>
              

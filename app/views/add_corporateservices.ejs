          <div class="row">
            <div class="col-12">
              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Add Corporate Services</h5>
                </div> 
         
                <div class="card-body">
                    <form id="formCorporateCorner" method="POST" action="<%- typeof locals == 'undefined' ? '/panel/save_corporate_services' : '/panel/update_corporate_services' %>"  enctype="multipart/form-data">
                       
                      <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                      <div class="row">
                            <input type="number" name="id" hidden value="<%= typeof locals == 'undefined' ? '' : locals.service_id %>">
                    
                            <!-- Partner ID -->
  <div class="mb-3 col-md-12">
    <div class="form-group">
        <label>Select Partner ID</label>
        <select name="partner_id" id="partner_id" class="form-control" autocomplete="off" required>
          <option value="">Select Partner ID</option>
          <% corporateCorners.forEach(function(corner) { %>
            <option value="<%= corner.partner_id %>">
              <%= corner.partner_id %> - <%= corner.company_name %>
            </option>
          <% }); %>
        </select>
    </div>
  </div>

<!-- Service Name -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Service Name</label>
      <input type="text" name="service_name" class="form-control" autocomplete="off" placeholder="Enter Service Name" value="<%- typeof locals != 'undefined' ? locals.service_name : '' %>" required>
  </div>
</div>

<!-- Service Description -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Service Description</label>
      <textarea name="service_description" class="form-control" rows="4" placeholder="Enter Service Description"><%- typeof locals != 'undefined' ? locals.service_description : '' %></textarea>
  </div>
</div>

<!-- Service Price -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Service Price</label>
      <input type="text" name="service_price" class="form-control" autocomplete="off" placeholder="Enter Service Price" value="<%- typeof locals != 'undefined' ? locals.service_price : '' %>">
  </div>
</div>

<div class="mb-3 col-md-12">
  <div class="form-group">
    <label for="service_status">Service Status</label>
    <select name="service_status" id="service_status" class="form-control" autocomplete="off">
      <option disabled selected>-- Choose Status -- </option>
      <option value="Active" <% if (typeof locals !== 'undefined' && locals.service_status == "Active") { %>selected<% } %>>Active</option>
      <option value="Disabled" <% if (typeof locals !== 'undefined' && locals.service_status == "Disabled") { %>selected<% } %>>Disabled</option>
    </select>
  </div>
</div>


<!-- Photo Upload (if applicable) -->
<div class="mb-3 col-md-12">
  <div class="form-group">
      <label>Service Photo</label>                         
                           <input type="file" id="photo" name="photo" class="form-control">
                           <img src="/uploads/<%- typeof locals != 'undefined' ? locals.photo : '' %>"width="200px" height="200px"> 
                           <input type="hidden"  value="<%- typeof locals != 'undefined' ? locals.photo : '' %>" name="photo_file_name" >    
  </div>
</div>
                    
                            <div class="col-md-12 mt-2">
                                <button type="submit" class="btn btn-primary me-2">Save</button>
                                <button type="reset" class="btn btn-outline-secondary">Reset</button>
                            </div>
                        </div>
                    </form>

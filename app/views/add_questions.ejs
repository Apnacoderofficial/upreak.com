          <div class="row">
           
            <div class="col-md-12 ">
              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Add Details</h5>
                </div> 
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" action="<%- typeof locals == 'undefined' ? '/panel/save_ques' : '/panel/update_ques' %>">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                    <div class="row">
                      
                      <input type="number" name="id" hidden value="<%= typeof locals == 'undefined' ? '': locals.id %>">
                      <div class="mb-3 col-md-12">
                        <label for="question" class="form-label">Question</label>
                        <input
                          class="form-control"
                          type="text"
                          id="question"
                          name="question"
                          autofocus
                          autocomplete="off"
                          placeholder="Enter Question"
                          required
                          value="<%= typeof locals == 'undefined' ? '': locals.question %>"
                        />
                      </div>
                      <div class="mb-3 col-md-12">
                        <label for="type" class="form-label">Question Type</label>
                        <input
                          class="form-control"
                          type="text"
                          id="type"
                          name="type"
                          autofocus
                          autocomplete="off"
                          placeholder="Enter Question Type"
                          required
                          value="<%= typeof locals == 'undefined' ? '': locals.type %>"
                        />  
                      </div>
                      <div class="mb-3 col-md-12">
                        <label for="type" class="form-label">Question Options ( Format - [{"option":"value"},{"option":"value"}] )</label>
                        <input
                          class="form-control"
                          type="text"
                          id="ques_options"
                          name="options"
                          autofocus
                          autocomplete="off"
                          placeholder="Enter Question Options"
                          value="<%= typeof locals == 'undefined' ? '': JSON.stringify(locals.options) %>"
                        />
                      </div>
                      <div class="mb-3 col-md-12">
                        <label for="type" class="form-label">Question Remarks</label>
                        <input
                          class="form-control"
                          type="text"
                          id="remarks"
                          name="remarks"
                          autofocus
                          autocomplete="off"
                          placeholder="Enter Question Remarks"
                          value="<%= typeof locals == 'undefined' ? '': locals.remarks %>"
                        />
                      </div>
					  <div class="mb-3 col-md-12">
                        <label for="type" class="form-label">Question Order</label>
                        <input
                          class="form-control"
                          type="number"
                          id="order_id"
                          name="order_id"
                          autofocus
                          autocomplete="off"
                          placeholder="Enter Question order"
                          value="<%= typeof locals == 'undefined' ? '': locals.order_id %>"
                        />
                      </div>
                      <div class="mb-3 col-md-12">
                        <label for="important" class="form-label">Question Important</label>
                        <div class=" form-control form-check-inline">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="important" id="important1" value="true" <%= typeof locals != 'undefined' ? (!!locals.important) ? locals.important == 'true' ? 'checked' : '' : '' : '' %>>
                          <label class="form-check-label" for="important1">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="important" id="important2" value="false"  <%= typeof locals != 'undefined' ? (!!locals.important) ? locals.important == 'false' ? 'checked' : '' : '' : '' %>>
                          <label class="form-check-label" for="important2">False</label>
                        </div>
                      </div>
                      </div>
                     
                    <div class="col-md-12 mt-2">
                      <button type="submit" class="btn btn-primary me-2">Save</button>
                      <button type="reset" class="btn btn-outline-secondary ">Reset</button>
                    </div>
                  </form>
                </div>

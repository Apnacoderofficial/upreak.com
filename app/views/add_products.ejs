          <div class="row">
            <div class="col-md-12 ">
              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Products</h5>
                </div> 
         
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" action="<%- typeof locals == 'undefined' ? '/panel/save_products' : '/panel/update_products' %>" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                      <div class="row">
                      <input type="number" name="id" hidden value="<%= typeof locals == 'undefined' ? '': locals.id %>">
                     
                     <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Name</label>                                 
                         <input type="text" id="title" name="name" class="form-control" autocomplete="off" placeholder="Enter Product Name" value="<%- typeof locals != 'undefined' ? locals.name : '' %>" >
                      </div>
                   </div>
                     <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Description</label>   
                      <div class=" p-2">
                         <input name="description" rows="10" class="form-control" autocomplete="off" placeholder="Enter Your Description" value="<%- typeof locals != 'undefined' ? locals.description : '' %>">
                      </div>
                     </div>
                   </div>
                   <div class="mb-3 col-md-12">
                    <div class="form-group">
                       <label> Enter link</label>   
                    <div class=" p-2">
                       <input name="link" rows="10" class="form-control" autocomplete="off" placeholder="Enter link" value="<%- typeof locals != 'undefined' ? locals.link : '' %>">
                    </div>
                   </div>
                 </div>
                   <div class="mb-3 col-md-12">
                    <div class="form-group">
                       <label>Enter Price</label>   
                    <div class=" p-2">
                       <input name="price" rows="10" class="form-control" autocomplete="off" placeholder="Enter Your Price" value="<%- typeof locals != 'undefined' ? locals.price : '' %>">
                    </div>
                   </div>
                 </div>

                   <div class="mb-3 col-md-12">
                        <div class="form-group">
                           <label>Upload Product Image</label>                                 
                           <input type="file" id="photo" name="photo" class="form-control" >
                           <img src="/uploads/<%- typeof locals != 'undefined' ? locals.photo : '' %>"width="200px" height="200px"> 
                           <input type="hidden"  value="<%- typeof locals != 'undefined' ? locals.photo : '' %>" name="photo_file_name" >    
                        </div>
                     </div>
    
                    <div class="col-md-12 mt-2">
                      <button type="submit" class="btn btn-primary me-2">Save</button>
                      <button type="reset" class="btn btn-outline-secondary ">Reset</button>
                    </div>
        
                  </form>
                </div>

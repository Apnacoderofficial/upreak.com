                                                <td><%= locals[i].heading %></td>
                                                <td><%= locals[i].sub_heading %></td>
                                                <td><%= locals[i].job_type %></td>
                                                <td><%= locals[i].location %></td>  
                                                <td><%= locals[i].experience %></td>                                                
                                                <td><%= locals[i].company_size %></td>
                                            	<td><%= locals[i].website %></td>
                                            	<td><%= locals[i].amount %></td>
                                            	<td><%= locals[i].relocation %></td>
                                                <td><%= locals[i].createdAt %></td>
                                                <% if(srole == 'Master') { %>
                                                    <td>
                                                        <a class="btn m-1 btn-outline-danger" href="/panel/edit_job?id=<%= locals[i].id %>"  type="" ><i class="bi bi-pencil-square"></i></a>
                                                        <a class="btn m-1 btn-outline-danger" href="/panel/delete_job/<%= locals[i].id %>"  type=""><i class="bi bi-trash3-fill"></i></a>
                                                    </td>
                                                <% } else {%>
                                                  <td>
                                                    <a class="btn m-1 btn-outline-danger" href="/panel/edit_job?id=<%= locals[i].id %>"  type="" ><i class="bi bi-pencil-square"></i></a>
                                          
                                                  </td>
                                                <% }%>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    </tfoot>
                                </table>
                            

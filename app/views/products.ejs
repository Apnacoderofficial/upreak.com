<%- include('includes/head.ejs') %>
<style>
     .payment-form .logo {
      margin-bottom: 20px;
    }
    </style>
<body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('includes/navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('includes/sidebar.ejs') %>
        <!-- partial -->
        <div class="main-panel"> 
          <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin">
              <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                  <h3 class="font-weight-bold">Product</h3>
                 
                </div>
              </div>
            </div>
          </div>
          <!-- <h1>Products</h1> -->
          <div class="row mx-auto justify-content-center">
            <% for (var i = 0;i < locals.length ; i++) {%>
            <div class="col-lg-3 col-sm-12 card p-3 m-1 shadow" style="border:0.5px solid #000">
                <img class="shadow" src="/uploads/<%= locals[i].photo %>">
                <h2 class="mt-2"><%= locals[i].name %></h2>
                <p style="text-align:justify"><%= locals[i].description %></p>
                <h3 style="text-align:justify">Price :<%= locals[i].price %></h3>
                <!-- <a class="btn btn-success d-block rounded" href="/panel/buy_now?id=<%= locals[i].id %>">Buy Now</a> -->
                <a class="btn btn-success d-block rounded" 
                  href="<%= (user_Data[0] && user_Data[0].phone_verify !== 'unverified' && user_Data[0].email_verify !== 'unverified' && user_Data[0].whatsapp_verify !== 'unverified') ? '/panel/buy_now?id=' + locals[i].id : 'javascript:void(0);' %>"
                  <%= (user_Data[0] && user_Data[0].phone_verify !== 'unverified' && user_Data[0].email_verify !== 'unverified' && user_Data[0].whatsapp_verify !== 'unverified') ? '' : 'disabled' %>
                  onclick="<%= (user_Data[0] && user_Data[0].phone_verify !== 'unverified' && user_Data[0].email_verify !== 'unverified' && user_Data[0].whatsapp_verify !== 'unverified') ? '' : 'alert(\'Please complete your verification before proceeding.\'); return false;' %>">
                  Buy Now
                </a>

                <!-- <div class="row justify-content-center">
                    <div class="col-3"><a class="btn btn-success text-white" href="<%= locals[i].name %>"><i class="fa fa-solid fa-eye"></i></a></div>                          
                                        <div class="col-3"><a class="btn btn-warning text-white" href="Products/1"><i class="fa fa-solid fa-edit"></i></a></div>
                    <div class="col-3"><a class="btn btn-danger text-white " href="Products/1"><i class="fa fa-solid fa-trash"></i></a></div>            
                </div> -->
            </div>
            <% } %>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('includes/footer.ejs') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
</body>
  
                            
                           
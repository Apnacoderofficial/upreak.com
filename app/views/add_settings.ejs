              <div class="card shadow mb-4">
                <div class="card-header"> <h5>Settings</h5>
                </div> 
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" action="/panel/save_settings">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                    <div class="row">
                      <input type="number" name="id" hidden value="<%= locals.id %>">
                      
					<div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Phone</label>                                 
                         <input type="text" id="phone" name="phone" class="form-control" autocomplete="off" placeholder="Enter" value="<%- typeof locals != 'undefined' ? locals.phone : '' %>" >
                      </div>
                   </div>
                    <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Email</label>                                
                         <input type="email" id="email" name="email" class="form-control" autocomplete="off" placeholder="Enter" value="<%- typeof locals != 'undefined' ? locals.email : '' %>" >
                      </div>
                   </div>
                    <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Website</label>                                 
                         <input type="text" id="website" name="website" class="form-control" autocomplete="off" placeholder="Enter" value="<%- typeof locals != 'undefined' ? locals.website : '' %>" >
                      </div>
                   </div>
                    <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Timming</label>                                 
                         <input type="text" id="timming" name="timming" class="form-control" autocomplete="off" placeholder="Enter" value="<%- typeof locals != 'undefined' ? locals.timming : '' %>" >
                      </div>
                   </div>
                    <div class="mb-3 col-md-12">
                      <div class="form-group">
                         <label> Enter Location</label>                                 
                         <input type="text" id="location" name="location" class="form-control" autocomplete="off" placeholder="Enter" value="<%- typeof locals != 'undefined' ? locals.location : '' %>" >
                      </div>
                   </div>
                    
                    <div class="col-md-12 mt-2">
                      <button type="submit" class="btn btn-primary me-2">Save</button>
                      <button type="reset" class="btn btn-outline-secondary ">Reset</button>
                    </div>
        
                  </form>

<script>
  // Function to hide alerts after 10 seconds
  setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
      alert.classList.remove('show');
      alert.classList.add('hide');
    });
  }, 3000); // 10000 milliseconds = 10 seconds
</script>
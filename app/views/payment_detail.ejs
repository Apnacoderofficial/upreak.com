            <body>
            <div class="container-scroller">
              <!-- partial:partials/_navbar.html -->
              <%- include('includes/navbar.ejs') %>
              <!-- partial -->
              <div class="container-fluid page-body-wrapper">
                <!-- partial -->
                <!-- partial:partials/_sidebar.html -->
                <%- include('includes/sidebar.ejs') %>
                <!-- partial -->
                <div class="main-panel"> <div class="content-wrapper">
                  <div class="row">
                    <div class="col-md-12 grid-margin">
                      <div class="row">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                          <h3 class="font-weight-bold">Payment Details</h3>
                         
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 ">
                        <div class="card shadow mb-4">
                          <div class="card-header">
                            <div class="row ">
                              <h5 class="col pt-2">View Details</h5>
                              <!-- <a href="/panel/add_job_seekers" class="btn btn-primary col-md-offset-6 mx-1" style="float: right;" >Add</a> -->
                          </div>
                          </div>
                        <div class="card-body">
                          <div class=" table-responsive">

                            <table  class=" table table-striped display expandable-table" width="100%" cellspacing="0">
                              <thead class="table-light">
                                <tr class=" text-center">
                                  
                                  <!-- <th>Id</th> -->
                                  
                                  <% if( session.role == 'Master' || session.role == 'Admin' || session.role == 'SubAdmin') {%>  
                                    <th>SNo.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Amount</th>
                                    <th>Payment Status</th>
                                    <th>Provider Reference ID</th>
                                    <th>Merchant ID</th>
                                    <th>Payment ID</th>
                                        <!-- <th>Credit</th> -->
                                          <th>Payment At</th>
                                    <%}else{%>
                                      <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Provider Reference ID</th>
                                    <th>Merchant ID</th>
                                    <th>Payment ID</th>
                                        <th>Amount</th>
                                        <th>Payment Status</th>
                                        <!-- <th>Credit</th> -->
                                        <!-- <th>Slots Action</th> -->
                                          <th>Payment At</th>
                                    <%}%>
                                    
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% for (var i = 0;i < locals.length ; i++) {%>
                                          <% if( session.role == 'User' && locals[i].email == session.userid) {%>  
                                            <tr>
                                              <!-- <td><%= locals[i].id %></td> -->
                                              <!-- <td><%= i+1 %></td> -->
                                              <td><%= locals[i].name %></td>
                                              <td><%= locals[i].email %></td>
                                              <td><%= locals[i].phone %></td>
                                              <td><%= locals[i].providerReferenceId %></td>
                                              <td><%= locals[i].merchantId %></td>
                                              <td><%= locals[i].transactionId %></td>
                                              <td>Rs <%= locals[i].amount %></td>
                                              <td>
                                                <% if( locals[i].code == "PAYMENT_SUCCESS") {%>  
                                                  <span class="text-success font-weight-bold">Success</span>
                                                  <%} else if( locals[i].code == "PAYMENT_INITIATED") {%>
                                                    <span  class="text-danger font-weight-bold">Initiated</span>  
                                                    <%} else {%>
                                                 <span  class="text-danger font-weight-bold">Failed</span>   
                                                  <%}%>
                                              </td>
                                              <!-- <td><%= locals[i].credit %></td> -->
                                            <td><%= locals[i].createdAt %></td>
                                        </tr>
                                        <% } else if( session.role == 'Master'  || session.role == 'SubAdmin') {%>  
                                          <tr>
                                            <!-- <td><%= locals[i].id %></td> -->
                                            <td><%= i+1 %></td>
                                              <td><%= locals[i].name %></td>
                                              <td><%= locals[i].email %></td>
                                              <td><%= locals[i].phone %></td>
                                              <td>Rs <%= locals[i].amount %></td>
                                              <td>
                                                <% if( locals[i].code == "PAYMENT_SUCCESS") {%>  
                                                  <span class="text-success font-weight-bold">Success</span>
                                                  <%} else if( locals[i].code == "PAYMENT_INITIATED") {%>
                                                    <span  class="text-danger font-weight-bold">Initiated</span>  
                                                    <%} else {%>
                                                 <span  class="text-danger font-weight-bold">Failed</span>   
                                                  <%}%>
                                              </td>
                                              <td><%= locals[i].providerReferenceId %></td>
                                              <td><%= locals[i].merchantId %></td>
                                              <td><%= locals[i].transactionId %></td>
                                              <!-- <td><%= locals[i].credit %></td> -->
                                                <td><%= locals[i].createdAt %></td>
                                              </tr>
                                          <% } }%>
                                        </tbody>
                                      </tfoot>
                                    </table>
                                  </div>
                        </div>
                        
                        
                      </div>
                    </div>
                  </div>
                </div>
       
                  <!-- content-wrapper ends -->
                  <!-- partial:partials/_footer.html -->
                  <%- include('includes/footer.ejs') %>
                  <!-- partial -->
                </div>
                <!-- main-panel ends -->
              </div>
              <!-- page-body-wrapper ends -->
            </div>
